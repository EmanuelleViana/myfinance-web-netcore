        </td>
        <td><button type="button" class="btn btn-outline-danger">Excluir</button>
        </td>
        </tr> *@

    </tbody>
</table>

<script>
    function Novo() {
        window.location.href = "../PlanoConta/Cadastro";
    }

    function Editar(id) {
        window.location.href = "/PlanoConta/Cadastro/" + id

    }
    function Excluir(id) {
        window.location.href = "/PlanoConta/Excluir/" + id
    }
</script>