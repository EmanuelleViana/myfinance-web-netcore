@model PlanoContaModel
@{
    ViewData["Title"] = "Cadastro de Plano de Contas";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="PlanoConta" asp-action="Cadastro" method="post">
    <div class="container">
        <div class="mb-3">
            <label class="form-label">Descrição</label>
            <input type="hidden" id="txtId" class="form-control" asp-for="Id" />
            <input type="text" id="txtNome" class="form-control" asp-for="Descricao" />
        </div>

        <div class="mb-3">
            <label for="">@Html.RadioButtonFor(m => m.Tipo, "D")Despesa</label>
            <label for="">@Html.RadioButtonFor(m => m.Tipo, "R")Receita</label>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary btn-lg">Salvar</button>
            <button type="button" class="btn btn-secondary btn-lg" onclick="Cancelar()">Cancelar</button>
        </div>
    </div>
</form>

<hr />


<hr />



<script>
    function Cancelar() {
        window.location.href = "/PlanoConta/Index";
    }
</script>